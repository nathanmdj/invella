{
  "extends": "@kit/tsconfig/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "paths": {
      "~/hooks": ["./src/hooks"],
      "~/lib/*": ["./src/lib/*"],
      "~/ui": ["./src/shadcn/*"],
      "~/ui/*": ["./src/shadcn/*"]
    }
  },
  "include": ["*.ts", "src"],
  "exclude": ["node_modules"]
}